@page "/products/delete"
@using Microsoft.AspNetCore.Hosting
@using Microsoft.EntityFrameworkCore
@using System.Collections.Generic
@using System.IO
@using System.Linq
@using OnlineShopBlazor.Models.Db
@inject IDbContextFactory<OnlineShopBlazor.Models.Db.OnLineShopContext> DbFactory
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment WebHostEnvironment

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Product</h2>
    <hr />
    @if (product is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@product.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@product.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FullDesc</dt>
            <dd class="col-sm-10">@product.FullDesc</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@product.Price</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Discount</dt>
            <dd class="col-sm-10">@product.Discount</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ImageName</dt>
            <dd class="col-sm-10">@product.ImageName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Qty</dt>
            <dd class="col-sm-10">@product.Qty</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Tags</dt>
            <dd class="col-sm-10">@product.Tags</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">VideoUrl</dt>
            <dd class="col-sm-10">@product.VideoUrl</dd>
        </dl>
        <EditForm method="post" Model="product" OnValidSubmit="DeleteProduct" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(product is null)">Delete</button> |
            <a href="/products">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Product? product;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        product = await context.Products.FirstOrDefaultAsync(m => m.Id == Id);

        if (product is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteProduct()
    {
        await using var context = DbFactory.CreateDbContext();
        var productToDelete = await context.Products.FirstOrDefaultAsync(p => p.Id == Id);

        if (productToDelete is null)
        {
            NavigationManager.NavigateTo("/products");
            return;
        }

        var productImageName = productToDelete.ImageName;

        var galleries = await context.ProductGalleries
            .Where(g => g.ProductId == productToDelete.Id)
            .ToListAsync();

        var galleryImageNames = galleries
            .Select(g => g.ImageName)
            .Where(name => !string.IsNullOrWhiteSpace(name))
            .ToList();

        if (galleries.Count > 0)
        {
            context.ProductGalleries.RemoveRange(galleries);
        }

        context.Products.Remove(productToDelete);
        await context.SaveChangesAsync();
        DeleteProductImages(productImageName, galleryImageNames);
        NavigationManager.NavigateTo("/products");
    }

    private void DeleteProductImages(string? productImageName, IEnumerable<string?> galleryImageNames)
    {
        if (string.IsNullOrWhiteSpace(WebHostEnvironment?.WebRootPath))
        {
            return;
        }

        var productsPath = Path.Combine(WebHostEnvironment.WebRootPath, "images", "Products");
        var galleryPath = Path.Combine(productsPath, "Gallery");

        if (!string.IsNullOrWhiteSpace(productImageName))
        {
            DeleteFileIfExists(Path.Combine(productsPath, productImageName));
        }

        foreach (var galleryImage in galleryImageNames)
        {
            if (string.IsNullOrWhiteSpace(galleryImage))
            {
                continue;
            }

            DeleteFileIfExists(Path.Combine(galleryPath, galleryImage));
        }
    }

    private static void DeleteFileIfExists(string path)
    {
        if (File.Exists(path))
        {
            File.Delete(path);
        }
    }
}
@inject IWebHostEnvironment WebHostEnvironment
