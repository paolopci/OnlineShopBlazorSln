@page "/productgalleries/edit"
@using Microsoft.EntityFrameworkCore
@using OnlineShopBlazor.Models.Db
@inject IDbContextFactory<OnlineShopBlazor.Models.Db.OnLineShopContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>ProductGallery</h2>
<hr />
@if (ProductGallery is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="ProductGallery" OnValidSubmit="UpdateProductGallery" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="ProductGallery.Id" value="@ProductGallery.Id" />
                <div class="mb-3">
                    <label for="productid" class="form-label">ProductId:</label>
                    <InputNumber id="productid" @bind-Value="ProductGallery.ProductId" class="form-control" />
                    <ValidationMessage For="() => ProductGallery.ProductId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="imagename" class="form-label">ImageName:</label>
                    <InputText id="imagename" @bind-Value="ProductGallery.ImageName" class="form-control" />
                    <ValidationMessage For="() => ProductGallery.ImageName" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/productgalleries">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private ProductGallery? ProductGallery { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ProductGallery ??= await context.ProductGalleries.FirstOrDefaultAsync(m => m.Id == Id);

        if (ProductGallery is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateProductGallery()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ProductGallery!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ProductGalleryExists(ProductGallery!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/productgalleries");
    }

    private bool ProductGalleryExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.ProductGalleries.Any(e => e.Id == id);
    }
}
